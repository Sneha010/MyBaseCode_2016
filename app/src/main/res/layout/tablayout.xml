<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.TabLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tab_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/colorAccent"
    android:elevation="6dp"
    android:minHeight="?attr/actionBarSize"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    tools:tabBackground="@color/colorAccent"
    tools:tabGravity="fill"
    tools:tabIndicatorColor="@color/colorPrimary"
    tools:tabMode="scrollable"
    tools:tabPaddingEnd="10dp"
    tools:tabPaddingStart="10dp"
    tools:tabSelectedTextColor="@color/white"
    />